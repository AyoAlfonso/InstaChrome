{
    "manifest_version": 2,

    "name": "InstaChrome",
    "description": "An replacement 'New Tab' extension that displays the latest Instagram posts from a tag of your choice.",
    "version": "2",

    "chrome_url_overrides": {
        "newtab" : "index.html"
    },

    "permissions": [
        "storage"
    ],

    "icons": { 
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png" 
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval' https://api.instagram.com; object-src 'self'"
}